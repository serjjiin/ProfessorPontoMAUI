<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfessorPontoMAUI.Pages.EditaUsuario"
             Title="EditaUsuario"
             NavigationPage.HasNavigationBar="False">

    <StackLayout VerticalOptions="CenterAndExpand"
                 Margin="16"
                 Padding="16" >

        <Label x:Name="lblMatricula" 
               Text="{Binding Matricula}"/>
        
        <Entry Placeholder="Digite sua matricula" x:Name="txtMatricula" />

        <Label x:Name="lblSenha"
               Text="{Binding Senha}"/>

        <Entry Placeholder="Digite sua senha" x:Name="txtSenha" />

        <Button x:Name="btnCadastrar" 
                Text="Cadastrar"
                Clicked="btnCadastrar_Clicked"
                Margin="10"/>

        <Button x:Name="btnVoltar"
                Clicked="btnVoltar_Clicked"
                Text="Voltar" 
                Margin="10"/>


    </StackLayout>
</ContentPage>